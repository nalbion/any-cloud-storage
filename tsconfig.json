{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "lib": ["ES2022"],
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
